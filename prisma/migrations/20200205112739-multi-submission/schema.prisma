generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

enum AdminRole {
  ADMIN
  MODERATOR
}

model Admin {
  id        Int        @id      @default(autoincrement())
  email     String     @unique
  password  String
  role      AdminRole
}

model Parent {
  id        Int      @id      @default(autoincrement())
  email     String   @unique
  password  String
  stripeID  String   @unique
  children  Child[]
}

model Cohort {
  id        Int         @id      @default(autoincrement())
  name      String      @unique
  activity  String
  week      Int
  dueDates  DueDates[]
  children  Child[]
}

model DueDates {
  id          Int       @id  @default(autoincrement())
  week        Int
  reading     DateTime       @default(now())
  submission  DateTime       @default(now())
}


model Child {
  id             Int           @id  @default(autoincrement())
  subscription   String             @default("")
  username       String
  grade          Int
  dyslexia       Boolean            @default(false)
  cohort         Cohort
  parent         Parent
  submissions    Submission[]
  progress       Progress[]
}

model Progress {
  id          Int      @id  @default(autoincrement())
  week        Int
  reading     Boolean       @default(false)
  submission  Boolean       @default(false)
}

model Submission {
  id            Int      @id  @default(autoincrement())
  week          Int
  child         Child
  illustration  String[]
  story         String[]
  storyText     String
}

model Canon {
  week       Int      @id
  base64     String
  altbase64  String?
}